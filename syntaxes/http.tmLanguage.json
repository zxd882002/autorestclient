{
	"name": "http",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#request"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"match": "\\#{3,}",
					"name": "comment.line.sharp.http"
				}
			]
		},
		"placeHolder": {
			"patterns": [
				{
					"match": "\\{(\\w+?)\\}|\\{(\\w+?\\|\\w+(,?\\w+)*)}",
					"name": "variable.other.constant"
				}
			]
		},
		"request": {
			"patterns": [
				{
					"name": "http.macro",
					"match": "(@(?:Name|Env|File))\\s+([^\\s]+)",
					"captures": {
						"1": {
							"name": "keyword.http.macro"
						},
						"2": {
							"name": "string.http.macro"
						}
					}
				},
				{
					"name": "keyword.http.script",
					"begin": "@{",
					"end": "}",
					"patterns": [
						{
							"include": "source.ts"
						}
					]
				},
				{
					"begin": "\\s*(?=\\[|{)",
					"end": "\\s*(?<=\\]|})",
					"name": "keyworld.http.body.json",
					"patterns": [
						{
							"include": "source.json"
						}
					]
				},
				{
					"captures": {
						"1": {
							"name": "keyword.http.request.method"
						},
						"2": {
							"name": "space.http.request.space"
						},
						"3": {
							"patterns": [
								{
									"include": "#placeHolder"
								},
								{
									"match": "[^{}]+",
									"name": "string.http.request.url"
								}
							]
						},
						"4": {
							"name": "space.http.request.space"
						},
						"5": {
							"name": "keyword.http.request.type"
						},
						"6": {
							"name": "constant.numeric.http.request.version"
						}
					},
					"match": "(?i)^(?:(get|post|put|delete|patch|head|options|connect|trace))(\\s+)(.+?)(\\s+)(?:(HTTP)\\/(\\d+.\\d+))?$",
					"name": "http.requestline"
				},
				{
					"captures": {
						"1": {
							"name": "keyword.http.request.header.name"
						},
						"2": {
							"name": "keyword.http.request.http"
						},
						"3": {
							"patterns": [
								{
									"include": "#placeHolder"
								},
								{
									"match": "[^{}]+",
									"name": "string.http.request.header.value"
								}
							]
						}
					},
					"match": "^([\\w\\-]+)\\s*(\\:)\\s*(.*?)\\s*$",
					"name": "http.headers"
				}
			]
		}
	},
	"scopeName": "source.http"
}