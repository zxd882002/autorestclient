{
    "name": "autorestclient",
    "displayName": "AutoRestClient",
    "description": "Auto Rest Client",
    "version": "1.1.2",
    "icon": "rest_icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/zxd882002/autorestclient"
    },
    "publisher": "Xudong",
    "engines": {
        "vscode": "^1.46.0"
    },
    "main": "./client/out/extension.js",
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:http"
    ],
    "contributes": {
        "languages": [
            {
                "id": "http",
                "aliases": [
                    "http"
                ],
                "extensions": [
                    ".rest",
                    ".http"
                ],
                "configuration": "./configuration/language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "http",
                "scopeName": "source.http",
                "path": "./syntaxes/http.tmLanguage.json"
            },
            {
                "path": "./syntaxes/injectPlaceHolder.json",
                "scopeName": "placeHolder.injection",
                "injectTo": [
                    "source.json",
                    "source.http"
                ]
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -b",
        "watch": "tsc -b -w",
        "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
        "test": "node ./out/test/runTest.js",
        "deploy": "vsce package --out \"./releases\""
    },
    "dependencies": {},
    "devDependencies": {}
}