{
    "name": "autorestclient",
    "displayName": "AutoRestClient",
    "description": "Auto Rest Client",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.46.0"
    },
    "main": "./client/out/extension.js",
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:http"
    ],
    "commands": [
        {
            "command": "auto.rest-client.request",
            "title": "Send Request",
            "category": "Rest Client"
        }
    ],
    "contributes": {
        "languages": [
            {
                "id": "http",
                "aliases": [
                    "rest",
                    "http"
                ],
                "extensions": [
                    ".rest",
                    ".http"
                ],
                "configuration": "./configuration/language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "http",
                "scopeName": "source.http",
                "path": "./syntaxes/http.tmLanguage.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -b",
        "watch": "tsc -b -w",
        "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/node": "^14.11.2",
        "@types/vscode": "^1.49.0"
    },
    "dependencies": {
        "node": "^14.13.0"
    }
}
